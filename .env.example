# =============================================================================
# Voyager AI — Environment Variables
# Copy this file to .env and fill in your keys.
# =============================================================================

# ── LLM Providers (at least one required) ────────────────────────────────────
ANTHROPIC_API_KEY=        # Claude (preferred for planning + writing)
OPENAI_API_KEY=           # OpenAI (preferred for research agents)

# ── Travel APIs (all optional — agents fall back to LLM data if missing) ─────
AMADEUS_CLIENT_ID=        # Amadeus flights + hotels
AMADEUS_CLIENT_SECRET=
TRIPADVISOR_API_KEY=      # Activity search
OPENWEATHERMAP_API_KEY=   # Weather forecasts
